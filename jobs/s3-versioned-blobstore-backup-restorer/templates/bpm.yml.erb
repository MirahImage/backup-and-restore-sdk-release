processes:
  - name: backup
    executable: /var/vcap/jobs/s3-versioned-blobstore-backup-restorer/bin/bbr/run_backup
    env:
      BBR_ARTIFACT_DIRECTORY: /var/vcap/store/bbr-backup/s3-versioned-blobstore-backup-restorer/
    additional_volumes:
    - path: /var/vcap/store/bbr-backup/s3-versioned-blobstore-backup-restorer/
      writable: true
  - name: restore
    executable: /var/vcap/jobs/s3-versioned-blobstore-backup-restorer/bin/bbr/run_restore
    env:
      BBR_ARTIFACT_DIRECTORY: /var/vcap/store/bbr-backup/s3-versioned-blobstore-backup-restorer/
    additional_volumes:
    - path: /var/vcap/store/bbr-backup/s3-versioned-blobstore-backup-restorer/